# Environment Variables Configuration

# ======================
# BACKEND (.env)
# ======================

# Server Configuration
NODE_ENV=production
PORT=5000

# URLs
BACKEND_URL=https://your-backend.vercel.app
FRONTEND_URL=https://codeiiest.vercel.app
CLIENT_URL=https://codeiiest.vercel.app
ADMIN_URL=https://admin.codeiiest.vercel.app

# Session Secret (MUST be strong in production!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-min-32-characters-long

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
# Alternative format if using MONGO_CLIENT_URI
MONGO_CLIENT_URI=mongodb+srv://username:<db_password>@cluster.mongodb.net/database
MONGO_CLIENT_PASSWORD=your-mongo-password

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Codeforces OAuth
CF_CLIENT_ID=your-codeforces-client-id
CF_CLIENT_SECRET=your-codeforces-client-secret
CF_REDIRECT_URI=https://your-backend.vercel.app/api/auth/codeforces/callback

# ======================
# FRONTEND (.env)
# ======================

# Vite/React App
VITE_API_URL=https://your-backend.vercel.app

# ======================
# DEVELOPMENT (.env.development)
# ======================

# Backend (server/.env.development)
NODE_ENV=development
PORT=5000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173
ADMIN_URL=http://localhost:3000
SESSION_SECRET=dev-session-secret-change-in-production
MONGO_URI=mongodb://localhost:27017/codeiiest
# Or your MongoDB Atlas URI for development
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
CF_CLIENT_ID=your-codeforces-client-id
CF_CLIENT_SECRET=your-codeforces-client-secret
CF_REDIRECT_URI=http://localhost:5000/api/auth/codeforces/callback

# Frontend (client/.env.development)
VITE_API_URL=http://localhost:5000
